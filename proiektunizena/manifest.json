{
  "manifest_version": 2,
  "name": "proiektuizena",
  "version": "1.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "default-theme@mozilla.org"
    }
  },
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_title": "proiektuizena",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  
  

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
       "js": ["public/pluggin.js", "public/moment.js"]
    
    }
  ]
}
